<div class="container">
  <div class="row">

  <table class='table table-hover table-inverse'>
      <tr>
        <th>会員ID</th>
        <th>ニックネーム</th>
        <th>ステータス</th>
      </tr>
      <% @post_users.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= link_to p.nickname, admin_post_user_path(p.id) %></td>
            <td><% if p.is_deleted == true %>
              <p>退会</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
      <%= paginate @post_users %>
  </table>
  </div>
</div>