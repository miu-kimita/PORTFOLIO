<div class="container">
  <h2><%= @post_user.nickname %>さんの会員ページ</h2>
    <div class="row">
    <table class='table table-hover table-inverse'>
      <tr>
        <td>会員ID</td>
        <td><%= @post_user.id %></td>
      </tr>
      <tr>
        <td>ニックネーム</td>
        <td><%= @post_user.nickname %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td><% if @post_user.is_deleted == true %>
            <p>退会</p>
          <% else %>
            <p>有効</p>
          <% end %>
        </td>
      </tr>
      </table>
      <div>
        <%= link_to "編集する", edit_admin_post_user_path,class: 'btn btn-sm btn-success' %>
      </div>
  </div>
</div>