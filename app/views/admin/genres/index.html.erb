<div class="container">
  <%= form_with model:@genre,url: admin_genres_path, local:true do |f| %>
    <div class="row">
    <div class="col-6">
      <div class="form-group">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: 'form-control genre_name' %>
      </div>
    </div>
    <div class="col-6 align-self-end">
      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
      <% end %>
    </div>

<div class="row">
  <div class="col-lg-6">
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>
</div>