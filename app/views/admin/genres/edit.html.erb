<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3>ジャンル編集</h3>
    <%= form_with model:@genre,url: admin_genre_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: "form-control genre_name" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
</div>