<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Post detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr></tr>
            <td><%= link_to post_user_path(@user.id) do %>
              <%= image_tag('no_image.jpg') %>
              <p><%= @post.post_user.nickname %></p>
              <% end %>
            </td>
            <td><%= link_to post_path(@post.id) do %>
              <%= @post.title %>
              <% end %>
            </td>
            <td><%= @post.post_detail %></td>
            <td>
              <% if @post.bookmarked_by?(current_post_user) %>
                <td><%= link_to "ブックマークを外す", post_bookmarks_path(@post), method: :delete %></td>
              <% else %>
                <td><%= link_to "ブックマーク", post_bookmarks_path(@post), method: :post %></td>
              <% end %>
            </td>
            <td><% if @user.id == current_post_user.id %>
              <%= link_to "Edit", edit_post_path(@post.id), class:"btn btn-success" %>
              <% end %>
            </td>
            <td><% if @user.id == current_post_user.id %>
              <%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "本当に消しますか？",class:"btn btn-success destroy(@post.id)" %>
                <% end %>
              </td>
            <td id="post_<%= (@post.id) %>"><%= render partial: 'public/favorites/favorite-btn', locals: { post:@post } %></td>
            <td>コメント数：<%= @post.post_comments.count %></td>
            </tr>
        </tbody>
      </table>
      <table>
        <tbody class="post_<%= (@post.id) %>"><%= render partial: 'public/post_comments/comment-index', locals: { post:@post } %></tbody>
      </table>
      <div class="new-comment">
        <%= form_with(model:[@post, @post_comment]) do |f| %>
          <%= f.text_area :comment, rows:'5' %>
          <%= f.submit "Post" %>
        <% end %>
      </div>
    </div>
  </div>
</div>