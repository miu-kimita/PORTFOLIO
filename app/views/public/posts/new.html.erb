<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h1 class="text-dark bg-light p-4 mb-0">ライフハックの投稿</h1>
      <%= form_with model: @post, local:true do |f| %>
        <div class="form-group">
          <p>title</p>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <p>image</p>
          <%= f.attachment_field :image, class: "form-control" %>
        </div>
        <div class="form-group">
          <p><%= f.label :genre_id,'genre' %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "==選択してください=="} ) %></p>
        </div>
        <div class="form-group">
          <p>LifeHack</p>
          <%= f.text_area :post_detail, class: "form-control", :size=>"60x10" %>
        </div>
        <div class="form-group">
          <%= f.submit 'create', class:"btn btn-success form-control" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>