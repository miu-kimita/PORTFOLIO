<h1 class>ライフハックの投稿</h1>
<%= form_with model: @post, local:true do |f| %>
  <div class="form-group">
    <p>Title</p>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <p>Image</p>
    <%= f.attachment_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <p><%= f.label :genre_id,'ジャンル' %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "==選択してください=="} ) %></p>
  </div>
  <div class="form-group">
    <p>LifeHack</p>
    <%= f.text_area :post_detail, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create', class:"btn btn-success form-control" %>
  </div>
  <% end %>