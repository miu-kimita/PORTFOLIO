<h1>ライフハック一覧</h1>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'>
        <%= render 'search', genre: @genres %>
    </div>

    <div class='col-md-9 offset-md-1'>
    <h2>LifeHacks</h2>
     <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>LifeHack <%= Post.human_attribute_name(:title) %></th>
          <th></th>
          <th>LifeHack <%= Post.human_attribute_name(:genre_id) %></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <% if post.post_user.is_deleted == false %>
        <tr>
          <td><%= link_to post_user_path(post.post_user.id) do %>
              <%= attachment_image_tag post.post_user, :image, format: 'jpeg', fallback: asset_path("no_image.jpg") %></td>
              <% end %>
          </td>
          <td><%= link_to post_path(post.id) do %>
              <%= post.title %>
              <% end %>
          </td>
          <td><%= attachment_image_tag post, :image,:fill, 100, 100, format: 'jpeg' %></td>
          <td><%= post.genre.genre_name %></td>
        </tr>
        <% end %>
        <% end %>
        <%= paginate @posts %>
      </tbody>
     </table>

     <h2>LifeHack Best3</h2>
     <table class="table table-hover table-inverse">
       <% @all_ranks.each do |post| %>
       <% if post.post_user.is_deleted == false %>
       <tr>
        <td><%= link_to post_user_path(post.post_user.id) do %>
           <%= attachment_image_tag post.post_user, :image, format: 'jpeg', fallback: asset_path("no_image.jpg") %></td>
           <% end %>
        </td>
        <td><%= link_to post_path(post.id) do %>
            <%= post.title %>
            <% end %>
        </td>
       </tr>
      <% end %>
      <% end %>
     </table>
    </div>
    </div>
</div>