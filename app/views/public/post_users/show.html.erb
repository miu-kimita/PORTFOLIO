<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
  <%#= render 'post_users/list', post_user: @post_user,post: @new_post %>
    <div class="col-md-8 offset-md-1">
      <h2>Post detail</h2>
      <table class="table table-hover table-inverse">
  		  <tr>
  		    <td><%= link_to post_user_path(@post.post_user) do %>
            <%= attachment_image_tag(@post.post_user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @post.post_user.name %>
            <% end %>
          </td>
          <td><%= link_to @post.title, post_path(@post) %></td>
          <td><%= post.image_id %></td>
          <td><%= @post.post_detail %></td>
          <td><% if @post_user.id == current_post_user.id %>
            <td><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success edit_post_#{@post.id}" %></td>
            <% end %>
          </td>
          <td><% if @post_user.id == current_post_user.id %>
            <%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy(@post.id)" %></td>
            <% end %>
          </td>
          <td id="post_<%= (@post.id) %>"><%= render partial: 'favorites/favorite-btn', locals: { post:@post } %></td>
          <td>コメント数：<%= @post.post_comments.count %></td>
          </tr>
      </table>
      <table>
        <tbody class="post_<%= (@post.id) %>"><%= render partial: 'post_comments/comment-index', locals: { post:@post } %></tbody>
      </table>
        <div class="new-comment">
        <%= form_with(model:[@post, @post_comment]) do |f| %>
          <%= f.text_area :comment, rows:'5' %>
          <%= f.submit "送信" %>
        <% end %>
        </div>
      <table>
        <caption>ブックマーク一覧</caption>
        <thead>
          <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @bookmarks.each do |bookmark| %>
            <tr>
              <td><%= bookmark.post.post_user.nickname %></td>
              <td>
                <%= link_to post_path(bookmark.post) do %>
                  <%= bookmark.post.title %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>