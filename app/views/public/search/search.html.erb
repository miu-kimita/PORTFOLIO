<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <% if @datas.empty? %>
        <h2>該当する投稿はありません</h2>
      <% end %>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>LifeHack Title</th>
          <th></th>
          <th>LifeHack ジャンル</th>
        </tr>
      </thead>
      </div>
      <tbody>
      <% @datas.each do |data| %>
        <tr>
          <td><%= link_to post_path(data.id) do %>
            <%=  data.title %>
          <% end %></td>
          <td></td>
          <td><%= data.genre.genre_name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>