<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h2 class="text-dark bg-light p-4 mb-0"><%= "#{t('contact.new.contact')}" %></h2>

    <%= form_for(@contact, url: confirm_path) do |f| %>
      <div class="form-group">
        <%= f.label :name, "#{t('contact.new.name')}" %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, "#{t('contact.new.email')}" %>
        <%= f.text_field :email, size: '10x10', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subject, "#{t('contact.new.subject')}" %>
        <%= f.text_field :subject, size: '10x10', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :message, "#{t('contact.new.message')}" %>
        <%= f.text_area :message, size: '10x10', class: 'form-control' %>
      </div>

      <div>
        <%= f.submit "#{t('dictionary.button.create')}" %>
      </div>
    <% end %>
    </div>
  </div>
</div>